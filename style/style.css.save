nav {
	width: 100%;
	padding: 0;
	background-color: #000;
	color: #ddd;
	/*float:left;*/
	font-family: sans-serif;
	border:none;
	outline:none;
	display:block;
	margin: 0;
}

nav a:link, a:visited, a:active, a{
	padding: 10px 15px;
	text-decoration: none;
	color: #fff;
	/*float: left;*/
	width:auto;
	border:none;
	outline:none;
	display:block;
}

nav a:hover {
	background-color: #ddd;
	color: #224;	
}

nav div {
	display: inline-block;
	position: relative;
}

.articles_list {
	display: none;
	background-color: #000;
	position: absolute;
	z-index: 1;
}

.articles_list a{
	display: block;
	/*clear:both;*/
}

.articles:hover .articles_list{
	display: block;
}

.content {
	overflow: hidden;
	min-height: 500px;
	padding: 20px;
	background-color: #224;
	text-align: justify;
	color: #ddd;
	font-family: Helvetica;
	line-height: 1.2;
	border-radius: 0px 0px 10px 10px;	
}




