body{
	margin: 20px;
	background: rgb(2,0,36);
	background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(15,15,74,1) 42%, rgba(0,0,0,1) 100%); 
	font-family: verdana;
}

.main {
	margin: 0 auto;
	max-width: 936px;
	
}

.banner {
	width: 100%;
	height: 100px;
	overflow: hidden;
   /* position: relative;*/
	margin: auto;
}

.banner img {
	height: 100%;
	float: left;
}

.banner h1 {
	height: 100%;
	background-color: #224;
	color: #a22;
	margin: auto;
	text-align: center;
	padding: 30px 0;
	border-radius: 10px;	
}
